{
    "name": "novem",
    "displayName": "novem",
    "description": "Easy access to your novem graphs and data",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.82.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "icon": "icons/novem.svg",
    "contributes": {
        "commands": [
            {
                "command": "novem.profile",
                "title": "novem: Profile"
            },
            {
                "command": "novem.viewNovemPlot",
                "title": "View Plot"
            },
            {
                "command": "novem.viewNovemMail",
                "title": "View Mail"
            },
            {
                "command": "novem.createNovemPlot",
                "title": "Create Plot",
                "icon": "$(new-folder)"
            },
            {
                "command": "novem.refreshNovemPlots",
                "title": "Refresh Plots",
                "icon": "$(refresh)"
            },
            {
                "command": "novem.deleteNovemPlot",
                "title": "Delete Plot"
            },
            {
                "command": "novem.createNovemMail",
                "title": "Create Mail",
                "icon": "$(new-folder)"
            },
            {
                "command": "novem.refreshNovemMails",
                "title": "Refresh Mails",
                "icon": "$(refresh)"
            },
            {
                "command": "novem.sendMail",
                "title": "Send Mail"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "novem",
                    "title": "novem",
                    "icon": "icons/novem.svg"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "novem.viewNovemPlot",
                    "when": "view == novem-plots && viewItem == plot-top",
                    "title": "View Plot",
                    "group": "1_show"
                },
                {
                    "command": "novem.viewNovemMail",
                    "when": "view == novem-mails && viewItem == mail-top",
                    "title": "View Mail",
                    "group": "1_show"
                },
                {
                    "command": "novem.sendMail",
                    "when": "view == novem-mails && viewItem == mail-top",
                    "title": "Send Mail",
                    "group": "1_show"
                },
                {
                    "command": "novem.deleteNovemPlot",
                    "when": "view == novem-plots && viewItem == plot-top",
                    "title": "Delete Plot",
                    "group": "4_mainpulate"
                }
            ],
            "view/title": [
                {
                    "command": "novem.createNovemPlot",
                    "when": "view == novem-plots",
                    "group": "navigation"
                },
                {
                    "command": "novem.refreshNovemPlots",
                    "when": "view == novem-plots",
                    "group": "navigation"
                },
                {
                    "command": "novem.createNovemMail",
                    "when": "view == novem-mails",
                    "group": "navigation"
                },
                {
                    "command": "novem.refreshNovemMails",
                    "when": "view == novem-mails",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "novem.deleteNovemPlot",
                    "when": "false"
                }
            ]
        },
        "views": {
            "novem": [
                {
                    "id": "novem-plots",
                    "name": "Plots",
                    "commands": [
                        "novem.createNovemPlot"
                    ]
                },
                {
                    "id": "novem-mails",
                    "name": "E-Mails"
                }
            ]
        },
        "markdown.markdownItPlugins": true
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/ini": "^1.3.31",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.82.0",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "@vscode/test-electron": "^2.3.4",
        "eslint": "^8.47.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "axios": "^1.5.0",
        "ini": "^4.1.1",
        "prettier": "^3.0.3"
    }
}